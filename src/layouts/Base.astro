---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	title?: string;
	description?: string;
	noAnalytics?: boolean;
}

let { 
	title = "", 
	description = "", 
	noAnalytics = false 
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} noAnalytics={noAnalytics} />
	</head>

	<body>
		<slot />
	</body>
</html>
