---
import { Icon } from "astro-icon/components"
import relativeUrl from "../urlHelper.js"

interface Props {
	lastPage: number,
	url: string,
}

const { lastPage, url } = Astro.props

---

{ lastPage > 1 && <nav class="flex border rounded flex-shrink mt-2">
	<div class="flex grow justify-center items-center px-3 py-2">
		Page 1 of { lastPage }
	</div>
	<div>
		<a href={ relativeUrl(url) } class="py-2 px-3 flex justify-center items-center hover:bg-gray-100 focus:bg-gray-100 active:bg-gray-200 focus:ring focus:ring-blue-500 focus:outline-none active:outline-none rounded-r">
			Page 2 <Icon name="fa6-solid:arrow-right-long" class="ml-2 w-4 h-4" />
		</a>
	</div>
</nav> }
