---
import { Image, type ImgAttributes } from "astro:assets";

interface Props extends astroHTML.JSX.ImgHTMLAttributes {}

const props = Astro.props;
---

<figure class={ props.class } id={ props.id } style={ props.style }>
	<Image { ...props } class={ null } id={ null } style={ null }></Image>
	<figcaption>{ props.alt }</figcaption>
</figure>
