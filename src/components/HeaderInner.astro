---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
import baseUrl from './baseUrl.js';
import { Icon } from 'astro-icon';
---

<div class="mx-auto max-w-[1140px]">
	<nav class="flex flex-row justify-between items-center">
		<a href={ baseUrl('/') } class="text-xl p-4 flex flex-row font-bold">
			<img class="rounded-sm w-8 h-8 mr-2" src="https://avatars3.githubusercontent.com/u/11584103">
			<Icon name="bi:journal-text" class="w-8 h-8 mr-2" />
			<p class="">
				{ SITE_TITLE }
			</p>
		</a>
		<ul class="flex flex-row justify-end pr-2">
			<li class="flex items-center">
				<a class="py-4 px-2 hover:text-gray-300 active:text-gray-400 animate" href="/">Home</a>
			</li>
			<li class="flex items-center">
				<a class="py-4 px-2 hover:text-gray-300 active:text-gray-400 animate" href={ baseUrl('/archive') }>Archive</a>
			</li>
			<li class="flex items-center">
				<a class="py-4 px-2 hover:text-gray-300 active:text-gray-400 animate" href={ baseUrl('/rss.xml') }><Icon name="simple-icons:rss" class="w-4 h-4" /></a>
			</li>
		</ul>
	</nav>
</div>